{% extends 'base.html.twig' %}

{% block title %}Kies producten{% endblock %}

{% block body %}
    <main class="flex justify-center px-4 py-12">
        <div class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-8 md:p-10">

            <h1 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-2">
                Kies wat je wilt meten
            </h1>

            <p class="text-gray-600 mb-8">
                Categorie:
                <span class="font-semibold text-gray-900">
                {{ category|capitalize }}
            </span>
            </p>

            <form method="post" class="space-y-8">

                <!-- PRODUCT SELECTIE -->
                <section>
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        {% for key, label in products %}
                            <label
                                class="
                                relative flex items-center gap-3
                                rounded-xl border border-gray-300
                                px-4 py-4
                                cursor-pointer
                                transition
                                hover:border-yellow-400
                                hover:bg-yellow-50
                            "
                            >
                                <input
                                    type="checkbox"
                                    name="products[]"
                                    value="{{ key }}"
                                    class="peer sr-only"
                                >

                                <div
                                    class="
                                    h-5 w-5 rounded
                                    border border-gray-400
                                    flex items-center justify-center
                                    text-white
                                    peer-checked:bg-yellow-500
                                    peer-checked:border-yellow-500
                                "
                                >
                                    âœ“
                                </div>

                                <span
                                    class="
                                    text-sm font-medium text-gray-800
                                    peer-checked:font-semibold
                                    peer-checked:text-yellow-600
                                "
                                >
                                {{ label }}
                            </span>
                            </label>
                        {% endfor %}
                    </div>
                </section>

                <!-- SUBMIT -->
                <button
                    type="submit"
                    class="
                    w-full rounded-xl
                    bg-yellow-500
                    px-6 py-4
                    text-base font-semibold text-black
                    shadow-md
                    transition
                    hover:bg-yellow-400
                    hover:shadow-lg
                    focus:outline-none
                    focus:ring-2
                    focus:ring-yellow-400
                    focus:ring-offset-2
                    active:scale-[0.98]
                "
                >
                    Volgende
                </button>

            </form>

        </div>
    </main>
{% endblock %}

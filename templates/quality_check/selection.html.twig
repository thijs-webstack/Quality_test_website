{% extends 'base.html.twig' %}

{% block title %}Kies Producten{% endblock %}

{% block body %}
    <div class="flex flex-col min-h-screen pb-40">
        
        {# --- Header & Search --- #}
        <div class="bg-white/90 backdrop-blur-md sticky top-[64px] z-30 border-b border-slate-100 transition-all duration-300">
            <div class="max-w-5xl mx-auto px-4 py-5">
                
                {# Progress #}
                <div class="mb-4">
                     {% include 'quality_check/_progress.html.twig' with {step: 2} %}
                </div>

                <div class="flex flex-col sm:flex-row sm:items-center justify-between gap-4">
                    <div>
                        <h1 class="text-2xl font-extrabold text-slate-900 tracking-tight">Kies Producten</h1>
                        <p class="text-sm text-slate-500 font-medium mt-1">Wat gaan we vandaag controleren?</p>
                    </div>

                    <div class="relative w-full sm:w-80 group">
                        <input 
                            type="text" 
                            id="product-search" 
                            placeholder="Zoek product..." 
                            class="w-full bg-slate-50 border-0 rounded-xl py-3 pl-11 pr-4 text-slate-900 placeholder-slate-400 font-medium shadow-sm ring-1 ring-slate-200 focus:bg-white focus:ring-2 focus:ring-yellow-400 focus:shadow-md transition-all duration-200"
                            onkeyup="filterProducts()"
                        >
                        <div class="absolute inset-y-0 left-0 pl-3.5 flex items-center pointer-events-none text-slate-400 group-focus-within:text-yellow-600 transition-colors">
                            <svg class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        {# --- Flash Messages --- #}
        {% for message in app.flashes('error') %}
            <div class="max-w-5xl mx-auto px-4 mt-6 animate-fade-in-up">
                <div class="bg-red-50 text-red-900 p-4 rounded-xl flex items-center shadow-sm ring-1 ring-red-100">
                    <svg class="h-5 w-5 mr-3 flex-shrink-0 text-red-500" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    <span class="font-bold text-sm">{{ message }}</span>
                </div>
            </div>
        {% endfor %}

        <form method="post" id="selection-form" class="flex-1 flex flex-col">
            <input type="hidden" name="_token" value="{{ csrf_token }}">
            
            <div class="max-w-5xl w-full mx-auto px-4 py-8 space-y-10">
                {% for category, products in groupedProducts %}
                    <section class="category-group animate-fade-in-up transition-all duration-300" data-category="{{ category|lower }}" style="animation-delay: {{ loop.index0 * 50 }}ms">
                        
                        {# Category Header #}
                        <div class="flex items-center gap-3 mb-5 pl-1">
                            <div class="h-6 w-1 rounded-full bg-yellow-400"></div>
                            <h2 class="text-lg font-bold text-slate-900 capitalize tracking-tight flex items-center gap-3">
                                {{ category }}
                                <span class="bg-slate-100 text-slate-500 text-[10px] font-bold px-2 py-0.5 rounded-full border border-slate-200 product-badge-count tabular-nums">
                                    {{ products|length }}
                                </span>
                            </h2>
                        </div>

                        {# Grid #}
                        <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 products-grid">
                            {% for key, name in products %}
                                {% set isSelected = key in currentSelection %}
                                <label class="cursor-pointer group relative product-card" data-name="{{ name|lower }}">
                                    <input type="checkbox" 
                                           name="products[]" 
                                           value="{{ key }}" 
                                           class="peer sr-only"
                                           {% if isSelected %}checked{% endif %}
                                           onchange="updateCount()">
                                    
                                    <div class="h-full aspect-[4/3] rounded-2xl bg-white border border-slate-200 relative transition-all duration-200 ease-out
                                                hover:border-yellow-300 hover:shadow-md hover:-translate-y-0.5
                                                active:scale-[0.98]
                                                peer-checked:border-yellow-500 peer-checked:ring-1 peer-checked:ring-yellow-500 peer-checked:bg-yellow-50/20 peer-checked:shadow-sm">
                                        
                                        {# Content #}
                                        <div class="absolute inset-0 flex flex-col items-center justify-center p-5 text-center z-10">
                                            <span class="text-sm font-bold text-slate-600 leading-snug group-hover:text-slate-900 peer-checked:text-slate-900 transition-colors select-none">
                                                {{ name }}
                                            </span>
                                        </div>
                                    </div>

                                    {# Checkmark Indicator #}
                                    <div class="absolute top-3 right-3 z-20 pointer-events-none w-6 h-6 rounded-full border-2 border-slate-200 bg-white text-transparent flex items-center justify-center transition-all duration-200 shadow-sm
                                                group-hover:border-yellow-400
                                                peer-checked:bg-yellow-500 peer-checked:border-yellow-500 peer-checked:text-white peer-checked:scale-110">
                                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="4">
                                            <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7"/>
                                        </svg>
                                    </div>
                                </label>
                            {% endfor %}
                        </div>
                    </section>
                {% endfor %}
                
                {# No Results State #}
                <div id="no-results" class="hidden flex flex-col items-center justify-center py-24 animate-fade-in-up">
                    <div class="w-16 h-16 bg-slate-50 text-slate-300 rounded-full flex items-center justify-center mb-4 border border-slate-100">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                        </svg>
                    </div>
                    <h3 class="text-lg font-bold text-slate-900 mb-1">Geen producten gevonden</h3>
                    <p class="text-slate-500 text-sm mb-6">Probeer een andere zoekterm.</p>
                    <button type="button" onclick="clearSearch()" class="text-yellow-600 text-sm font-bold hover:text-yellow-700 hover:underline transition-colors">
                        Zoekopdracht wissen
                    </button>
                </div>
            </div>

            {# --- Sticky Footer --- #}
            <div class="fixed bottom-0 left-0 right-0 p-4 z-40 safe-area-bottom pointer-events-none">
                <div class="max-w-3xl mx-auto pointer-events-auto">
                    <div class="bg-slate-900/95 backdrop-blur-xl text-white rounded-3xl shadow-xl shadow-slate-900/20 p-4 pr-5 flex items-center justify-between gap-6 ring-1 ring-white/10" id="sticky-bar">
                        
                        <div class="pl-4 flex flex-col justify-center">
                            <span class="text-[10px] text-slate-400 font-bold uppercase tracking-widest leading-none mb-1">Selectie</span>
                            <div class="flex items-baseline gap-1.5">
                                <span id="count-badge" class="text-xl font-bold text-white tabular-nums font-mono leading-none">0</span>
                                <span class="text-xs font-medium text-slate-500">gekozen</span>
                            </div>
                        </div>

                        <button type="submit" 
                                id="submit-btn"
                                class="group bg-yellow-400 text-slate-900 font-bold py-3.5 px-6 rounded-xl shadow-lg shadow-yellow-400/10 active:scale-[0.98] transition-all duration-200 hover:bg-yellow-300 hover:shadow-yellow-400/30 flex items-center disabled:opacity-50 disabled:cursor-not-allowed disabled:bg-slate-800 disabled:text-slate-600 disabled:shadow-none">
                            <span class="mr-2">Start Meting</span>
                            <div class="w-6 h-6 bg-yellow-500/20 rounded-full flex items-center justify-center group-hover:bg-yellow-500/30 transition-colors">
                                <svg class="w-3.5 h-3.5 transition-transform group-hover:translate-x-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="3">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                                </svg>
                            </div>
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script>
        function updateCount() {
            const count = document.querySelectorAll('input[name="products[]"]:checked').length;
            const badge = document.getElementById('count-badge');
            const btn = document.getElementById('submit-btn');
            
            // Subtle Scale Bump
            badge.style.transform = 'scale(1.2)';
            badge.style.transition = 'transform 0.15s cubic-bezier(0.175, 0.885, 0.32, 1.275)';
            setTimeout(() => badge.style.transform = 'scale(1)', 150);
            
            badge.textContent = count;
            
            if (count === 0) {
                btn.disabled = true;
                btn.classList.add('grayscale');
            } else {
                btn.disabled = false;
                btn.classList.remove('grayscale');
            }
        }

        function filterProducts() {
            const input = document.getElementById('product-search');
            const filter = input.value.toLowerCase().trim();
            const cards = document.querySelectorAll('.product-card');
            const categories = document.querySelectorAll('.category-group');
            let totalVisible = 0;

            // hide/show cards
            cards.forEach(card => {
                const name = card.getAttribute('data-name');
                const matches = name.includes(filter);
                
                if (matches) {
                    card.classList.remove('hidden');
                } else {
                    card.classList.add('hidden');
                }
            });

            // manage categories
            categories.forEach(category => {
                const visibleCards = category.querySelectorAll('.product-card:not(.hidden)');
                const countBadge = category.querySelector('.product-badge-count');
                
                if (visibleCards.length > 0) {
                    category.classList.remove('hidden');
                    totalVisible += visibleCards.length;
                    // Update category count dynamically? slightly overkill but nice
                    // countBadge.textContent = visibleCards.length; 
                } else {
                    category.classList.add('hidden');
                }
            });

            const noResults = document.getElementById('no-results');
            if (totalVisible === 0) {
                noResults.classList.remove('hidden');
            } else {
                noResults.classList.add('hidden');
            }
        }

        function clearSearch() {
            const input = document.getElementById('product-search');
            input.value = '';
            filterProducts();
            input.focus();
        }
        
        document.addEventListener('DOMContentLoaded', updateCount);
    </script>
{% endblock %}

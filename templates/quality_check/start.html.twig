{% extends 'base.html.twig' %}

{% block title %}Start Quapio Check{% endblock %}

{% block body %}
    <main class="flex justify-center px-4 py-12">
        <div class="w-full max-w-2xl bg-white rounded-2xl shadow-lg p-8 md:p-10">

            <h1 class="text-2xl md:text-3xl font-semibold text-gray-900 mb-8">
                Start Quapio Check
            </h1>

            {{ form_start(form) }}

            <!-- SHIFT / CREW -->
            <section class="mb-10 space-y-6">
                <div>
                    {{ form_label(form.shiftManager, null, {
                        label_attr: { class: 'block text-sm font-medium text-gray-700 mb-1' }
                    }) }}
                    {{ form_widget(form.shiftManager, {
                        attr: {
                            class: 'w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-400'
                        }
                    }) }}
                </div>

                <div>
                    {{ form_label(form.crew, null, {
                        label_attr: { class: 'block text-sm font-medium text-gray-700 mb-1' }
                    }) }}
                    {{ form_widget(form.crew, {
                        attr: {
                            class: 'w-full rounded-xl border border-gray-300 px-4 py-3 text-gray-900 focus:border-yellow-500 focus:ring-2 focus:ring-yellow-400'
                        }
                    }) }}
                </div>
            </section>

            <!-- CATEGORY -->
            <section class="mb-10">
                <h2 class="text-lg font-semibold text-gray-900 mb-4">
                    Kies categorie
                </h2>

                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
                    {% for choice in form.category %}
                        <label
                            class="
                            relative flex items-center justify-center
                            rounded-xl border border-gray-300
                            px-4 py-5
                            cursor-pointer
                            text-sm font-medium
                            transition
                            hover:border-yellow-400
                            hover:bg-yellow-50
                        "
                        >
                            {{ form_widget(choice, {
                                attr: {
                                    class: 'absolute inset-0 opacity-0 peer'
                                }
                            }) }}

                            <span
                                class="
                                peer-checked:text-yellow-600
                                peer-checked:font-semibold
                            "
                            >
                            {{ choice.vars.label }}
                        </span>
                        </label>
                    {% endfor %}
                </div>
            </section>

            <!-- SUBMIT -->
            <button
                type="submit"
                class="
                w-full rounded-xl
                bg-yellow-500
                px-6 py-4
                text-base font-semibold text-black
                shadow-md
                transition
                hover:bg-yellow-400
                hover:shadow-lg
                focus:outline-none
                focus:ring-2
                focus:ring-yellow-400
                focus:ring-offset-2
                active:scale-[0.98]
            "
            >
                Volgende
            </button>

            {{ form_end(form) }}

        </div>
    </main>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Start Quality Check{% endblock %}

{% block body %}
    <div class="min-h-[80vh] flex items-center justify-center px-4 py-12">
        <div class="w-full max-w-lg space-y-8 animate-scale-in">

            {# --- Hero Section --- #}
            <div class="text-center space-y-4">
                <div class="inline-flex items-center justify-center w-16 h-16 bg-gradient-to-br from-yellow-300 to-yellow-500 rounded-2xl shadow-lg shadow-yellow-200 mb-2 transform rotate-3">
                    <svg class="h-8 w-8 text-white drop-shadow-sm" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                </div>

                <h1 class="text-4xl font-extrabold tracking-tight text-slate-900">
                    Quality Check
                </h1>
                <p class="text-lg text-slate-600 max-w-xs mx-auto">
                    Klaar voor de start? <br>
                    <span class="text-slate-400 text-sm">begin direct.</span>
                </p>
            </div>

            {# --- Main Card --- #}
            <div class="bg-white p-8 rounded-[2rem] shadow-xl shadow-slate-200/60 border border-slate-100 relative overflow-hidden">
                {# Decorative bg element #}
                <div class="absolute top-0 right-0 w-32 h-32 bg-yellow-400/10 rounded-full blur-3xl -mr-10 -mt-10 pointer-events-none"></div>

                {{ form_start(form, {'attr': {'class': 'space-y-6 relative'}}) }}

                    <div class="space-y-5">
                        <div class="group">
                            {{ form_label(form.shiftManager, 'Shiftmanager', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 uppercase tracking-wider mb-1.5 ml-1'}}) }}
                            <div class="relative">
                                {{ form_widget(form.shiftManager, {'attr': {'class': 'block w-full rounded-2xl border-0 py-3.5 px-4 bg-slate-50 text-slate-900 font-medium shadow-sm ring-1 ring-inset ring-slate-200 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-yellow-400 focus:bg-white transition-all sm:text-sm sm:leading-6', 'placeholder': 'Naam manager'}}) }}
                            </div>
                            {{ form_errors(form.shiftManager) }}
                        </div>

                        <div class="group">
                            {{ form_label(form.crew, 'Uitvoerend Crewlid', {'label_attr': {'class': 'block text-xs font-bold text-slate-500 uppercase tracking-wider mb-1.5 ml-1'}}) }}
                            <div class="relative">
                                {{ form_widget(form.crew, {'attr': {'class': 'block w-full rounded-2xl border-0 py-3.5 px-4 bg-slate-50 text-slate-900 font-medium shadow-sm ring-1 ring-inset ring-slate-200 placeholder:text-slate-400 focus:ring-2 focus:ring-inset focus:ring-yellow-400 focus:bg-white transition-all sm:text-sm sm:leading-6', 'placeholder': 'Naam crewlid'}}) }}
                            </div>
                            {{ form_errors(form.crew) }}
                        </div>
                    </div>

                    <div class="pt-4">
                        <button type="submit"
                                class="group w-full flex items-center justify-center py-4 px-4 border border-transparent rounded-2xl shadow-lg shadow-yellow-400/20 text-base font-bold text-slate-900 bg-yellow-400 hover:bg-yellow-300 focus:outline-none focus:ring-4 focus:ring-yellow-400/30 transition-all duration-300 active:scale-[0.98]">
                            Start Meting
                            <svg class="ml-2 -mr-1 w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                            </svg>
                        </button>
                    </div>

                {{ form_end(form) }}
            </div>

            <p class="text-center text-xs text-slate-400 font-medium">
                Vandaag is een mooie dag voor kwaliteit.
            </p>
        </div>
    </div>
{% endblock %}
